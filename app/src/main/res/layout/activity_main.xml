<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/tv_tradehistory"
        android:layout_width="280dp"
        android:layout_height="86dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Trade History"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_findsupplies" />

    <Button
        android:id="@+id/tv_findpotential"
        android:layout_width="280dp"
        android:layout_height="86dp"

        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Find Potential Supplies"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tradehistory" />

    <Button
        android:id="@+id/tv_findsupplies"
        android:layout_width="118dp"
        android:layout_height="86dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="FInd Supplies"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_finddemand" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="79dp"
        android:layout_height="83dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Selamat pagi," />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Afan Herra" />

    <Button
        android:id="@+id/tv_finddemand"
        android:layout_width="118dp"
        android:layout_height="86dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:text="Find Demand"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tv_create"
        android:layout_width="118dp"
        android:layout_height="184dp"

        android:layout_marginStart="150dp"
        android:layout_marginTop="200dp"
        android:text="Create"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
